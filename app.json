{
  "expo": {
    "name": "SavvyTrackerTabs",
    "slug": "savvy-tracker-tabs",
    "owner": "ishabasnet23",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "savvytrackertabs",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "bundleIdentifier": "com.ishabasnet.savvytrackertabs",
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to your camera to scan barcodes and check product safety.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to analyze food images."
      }
    },

    "android": {
      "package": "com.ishabasnet.savvytrackertabs",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["CAMERA"],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SavvyTracker to access your camera to scan barcodes."
        }
      ],
      "expo-secure-store",
      "expo-web-browser"
    ],

    "experiments": {
      "typedRoutes": true
    },

    "extra": {
      "router": {
        "origin": false
      }
    }
  }
}